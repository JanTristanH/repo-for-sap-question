<core:FragmentDefinition xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:f="sap.f"
   xmlns:w="sap.ui.integration.widgets"
   xmlns:cssgrid="sap.ui.layout.cssgrid">
   <Dialog id="C02PopoverDialog" contentWidth="60%" title="{i18n>DialogTitle} $123445409">

      <Title text="Super cool Dialog" titleStyle="H2" class="sapUiSmallMarginBottom sapUiSmallMarginTop sapUiSmallMarginBegin" />
      <f:GridContainer>
         <f:layout>
            <f:GridContainerSettings rowSize="5rem" columnSize="16rem" gap="1rem" />
         </f:layout>

         <w:Card manifest="{manifests>/donut}">
            <w:layoutData>
               <f:GridContainerItemLayoutData rows="3" columns="2" />
            </w:layoutData>
         </w:Card>

         <w:Card manifest="{manifests>/objectVehicle}">
            <w:layoutData>
               <f:GridContainerItemLayoutData columns="2" rows="3"/>
            </w:layoutData>
         </w:Card>

         <w:Card manifest="{manifests>/objectRoute}">
            <w:layoutData>
               <f:GridContainerItemLayoutData columns="1" rows="3"/>
            </w:layoutData>
         </w:Card>

         <w:Card manifest="{manifests>/tableCalculatedEmissions}" baseUrl="./" action="onAction">
            <w:layoutData>
               <f:GridContainerItemLayoutData columns="5" />
            </w:layoutData>
         </w:Card>

      </f:GridContainer>

      <beginButton>
         <Button text="{i18n>dialogCloseButtonText}" press="onCloseDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>